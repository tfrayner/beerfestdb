[% META title = 'Product listing' %]

<script type="text/javascript">
   var url_object_list   = '[% c.uri_for( "/product/list/$category.id/$festival.id" ) %]';
   var url_object_submit = '[% c.uri_for( "/product/submit" ) %]';
   var url_object_delete = '[% c.uri_for( "/product/delete" ) %]';
   var url_supplier_list = '[% c.uri_for( "/company/list" ) %]';
   var url_festival_view = '[% c.uri_for( "/festival/view/$festival.id" ) %]';
   var category_id       = '[% category.id %]';
   var categoryname      = '[% category.description %]';
   var festivalname      = '[% festival.year | html %]  [% festival.name | html %]';
</script>

[% js_link( src = '/static/js/grids/product.js' ) %]

<select id='stylepopup' style='display: none'>
[% FOREACH style = styles.sort('description') -%]
<option value="[% style.product_style_id | html %]">[% style.description | html %]</option>
[% END %]
</select>

<div id="datagrid"></div>
