<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
  <head>
<!-- $Id: html_template.tt2 49 2009-12-31 15:19:25Z tfrayner $ -->
<!-- Example HTML template for use with cask_end_signs_latex.pl -->
    <title>Beer List</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  </head>
  <body>
    <table width="100%" border="1">
      <tr>
        <th width="12%" valign="middle">Brewery</th>
        <th width="15%" valign="middle">Beer</th>
        <th width="15%" valign="middle">ABV</th>
        <th width="8%" valign="middle">Style</th>
        <th width="65%" valign="middle">Tasting notes</th>
      </tr>
      [% FOREACH cask = objects %]
      <tr>
        <td>[% cask.brewery | html %]</td>
        <td>[% cask.product | html %]</td>
        <td>[%- IF cask.abv != "" && cask.abv > 0 %][% cask.abv | html %][% ELSE %]n/a[% END -%]</td>
        <td>[% cask.style | html %]&nbsp;</td>
        <td>[% cask.notes | html %]&nbsp;</td>
      </tr>
      [%- END %]
    </table>
  </body>
</html>
